{
    "version": 2,
    "rewrites": [
        { "source": "/(.*)", "destination": "/api/index.php" }
    ],
    "functions": {
        "api/**/*.php": { "runtime": "vercel-php@0.7.0" }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(css|js|images)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "/public/robots.txt"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://waqaf-9jek6fc8t-yassin-samys-projects.vercel.app"
    }
}
